# EditorConfig is awesome: http://EditorConfig.org

root = true

[*]
end_of_line = lf
charset = utf-8
trim_trailing_whitespace = true
insert_final_newline = true

[*.{js,coffee,html,less,json}]
indent_style = space
indent_size = 4

[package.json]
# adhere to current package.json style
indent_size = 2

[*.md]
trim_trailing_whitespace = false
